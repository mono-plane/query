<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>module</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/scripts</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>uninstall-presto.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>nodetool</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/config</directory>
            <outputDirectory>standalone/configuration/</outputDirectory>
            <includes>
                <include>standalone-presto.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/config</directory>
            <outputDirectory>domain/configuration/</outputDirectory>
            <includes>
                <include>presto-domain.xml</include>
                <include>presto-host.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/module/main</directory>
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/presto/main</outputDirectory>
            <includes>
                <include>module.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/module/main</directory>
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/presto/main/conf</outputDirectory>
            <includes>
                <!-- TODO: this should be turned into DMR config as well -->
                <include>presto-rackdc.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target</directory>
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/presto/main</outputDirectory>
            <includes>
                <include>wildfly-presto.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/presto/main</outputDirectory>
<!--            <includes>
                <include>org.apache.presto:presto-all</include>
                <include>org.apache.presto:presto-thrift</include>

            </includes>-->
            <excludes>
                <exclude>org.wildfly:wildfly-controller</exclude>
                <exclude>org.wildfly:wildfly-server</exclude>
                <exclude>org.wildfly:wildfly-subsystem-test</exclude>
                <exclude>org.jboss.logging:jboss-logging-annotations</exclude>
                <exclude>org.jboss.logging:jboss-logging-processor</exclude>
                <exclude>junit:junit</exclude>

            </excludes>
        </dependencySet>

    </dependencySets>
</assembly>